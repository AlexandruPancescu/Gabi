<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:backgroundTint="@color/switch_light_grey">

    <TextView
        android:id="@+id/accountBankNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bank Name"
        android:textColor="@android:color/darker_gray"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/currentBalanceTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currentBalanceTv"
        android:layout_width="84dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:text="Current Deposit"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/accountAdditionalInfoTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountBankNameTv" />

    <TextView
        android:id="@+id/accountBalanceValueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/currentBalanceTv"
        app:layout_constraintStart_toEndOf="@+id/currentBalanceTv"
        app:layout_constraintTop_toTopOf="@+id/currentBalanceTv" />

    <TextView
        android:id="@+id/accountCurrencyTv"
        android:layout_width="56dp"
        android:layout_height="29dp"
        android:layout_marginBottom="12dp"
        android:text="USD"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/accountBalanceValueTv"
        app:layout_constraintBottom_toBottomOf="@+id/currentBalanceTv"
        app:layout_constraintStart_toEndOf="@+id/accountBalanceValueTv" />

    <TextView
        android:id="@+id/accountAdditionalInfoTv"
        android:layout_width="380dp"
        android:layout_height="22dp"
        android:text="Additional Info"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentBalanceTv" />

</androidx.constraintlayout.widget.ConstraintLayout>
